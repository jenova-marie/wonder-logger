{
  "name": "@recoverysky/wonder-logger",
  "version": "1.0.6",
  "description": "Production-ready observability toolkit combining OpenTelemetry instrumentation with structured Pino logging for Node.js applications",
  "type": "module",
  "publishConfig": {
    "access": "public"
  },
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "scripts": {
    "build": "tsc",
    "test": "vitest run",
    "test:unit": "vitest run tests/unit",
    "test:integration": "vitest run tests/integration",
    "test:e2e": "vitest run tests/e2e",
    "test:watch": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage",
    "test:unit:coverage": "vitest run --coverage tests/unit",
    "test:integration:coverage": "vitest run --coverage tests/integration",
    "test:e2e:coverage": "vitest run --coverage tests/e2e",
    "version:bump": "bash scripts/version.sh",
    "prepublishOnly": "pnpm test:unit && pnpm test:integration && pnpm build",
    "publish:npm": "bash scripts/publish.sh",
    "publish:dry-run": "npm pack --dry-run"
  },
  "keywords": [
    "opentelemetry",
    "otel",
    "logging",
    "logger",
    "pino",
    "tracing",
    "metrics",
    "observability",
    "telemetry",
    "loki",
    "tempo",
    "prometheus",
    "grafana",
    "structured-logging",
    "distributed-tracing",
    "monitoring"
  ],
  "author": "jenova-marie",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/jenova-marie/wonder-logger.git"
  },
  "bugs": {
    "url": "https://github.com/jenova-marie/wonder-logger/issues"
  },
  "homepage": "https://github.com/jenova-marie/wonder-logger#readme",
  "files": [
    "dist",
    "README.md",
    "LICENSE",
    "src/**/README.md",
    "wonder-logger.yaml"
  ],
  "packageManager": "pnpm@10.14.0",
  "devDependencies": {
    "@types/node": "^24.7.0",
    "@vitest/coverage-v8": "^3.2.4",
    "memfs": "^4.49.0",
    "pino-pretty": "^13.1.1",
    "typescript": "^5.9.3",
    "vite": "^7.1.9",
    "vitest": "^3.2.4"
  },
  "dependencies": {
    "@opentelemetry/api": "^1.9.0",
    "@opentelemetry/auto-instrumentations-node": "^0.65.0",
    "@opentelemetry/exporter-jaeger": "^2.1.0",
    "@opentelemetry/exporter-metrics-otlp-http": "^0.206.0",
    "@opentelemetry/exporter-prometheus": "^0.206.0",
    "@opentelemetry/exporter-trace-otlp-http": "^0.206.0",
    "@opentelemetry/instrumentation-http": "^0.206.0",
    "@opentelemetry/resources": "^2.1.0",
    "@opentelemetry/sdk-metrics": "^2.1.0",
    "@opentelemetry/sdk-node": "^0.206.0",
    "@opentelemetry/sdk-trace-base": "^2.1.0",
    "@opentelemetry/semantic-conventions": "^1.37.0",
    "pino": "^10.0.0",
    "pino-opentelemetry-transport": "^1.1.0",
    "rxjs": "^7.8.2",
    "yaml": "^2.8.1",
    "zod": "^4.1.12"
  }
}
